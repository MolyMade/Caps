<UserControl x:Class="Caps.CapShow.QueryBoxItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Caps.CapShow"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500" KeyDown="UserControl_KeyDown">
    <Grid Background="{DynamicResource {x:Static SystemColors.InfoBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="QueryIconBlock" Source="/Caps;component/CapsTiny.ico" Margin="5,5,5,5" Grid.RowSpan="2"/>
        <TextBlock x:Name="QueryTextBlock" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap" Text="Query text goes here ..." FontSize="24" Margin="10,0,0,0"/>
        <TextBlock x:Name="DescriptionTextBlock" Grid.Column="1" Grid.Row="1" Text="Desctription text goes here ..." FontSize="14" Margin="10,0,0,0"/>

    </Grid>
</UserControl>
