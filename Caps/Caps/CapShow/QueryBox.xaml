<UserControl x:Name="QueryBox1" x:Class="Caps.CapShow.QueryBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Caps.CapShow"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="500" FontSize="36">
    <Grid>
        <TextBox x:Name="TextBox" TextWrapping="Wrap" Text="Query goes here" Background="#FFCEFFF6"/>
        <Popup x:Name="ItemPopup" PlacementTarget="{Binding ElementName=TextBox, Mode=OneWay}" Width="{Binding Width, ElementName=TextBox}" Height="{Binding Height, ElementName=TextBox}">
            <ListBox x:Name="ItemList" Width="500" Height="50">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <local:QueryBoxItem x:Name="QueryItem1" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Popup>
    </Grid>
</UserControl>
